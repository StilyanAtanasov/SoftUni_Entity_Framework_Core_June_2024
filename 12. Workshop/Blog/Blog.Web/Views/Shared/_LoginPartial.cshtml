<ul class="navbar-nav">
@if (User.Identity?.IsAuthenticated ?? false)
{
    <li class="nav-item">
        <a  class="nav-link text-dark" title="Manage">Hello, @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
            <a type="submit" asp-controller="ApplicationUser" asp-action="Logout" class="nav-link btn btn-link text-dark">Logout</a>
    </li>
}
else
{
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="ApplicationUser" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="ApplicationUser" asp-action="Login">Login</a>
        </li>
}
</ul>
