@model AddArticleViewModel;

@{
    ViewBag.Title = "Edit Article";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Edit" method="post">
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control" aria-required="true" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Content" class="form-label">Content</label>
                <input asp-for="Content" class="form-control" aria-required="true" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
	        <div class="mb-3">
		        <label asp-for="GenreId" class="form-label">Genre</label>
		        <select asp-for="GenreId" asp-items="Model.Genres" class="form-control"></select>
		        <span asp-validation-for="GenreId" class="text-danger"></span>
	        </div>
            <div class="mb-3 text-center">
                <input class="btn btn-primary" type="submit" value="Edit" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}